{
  "name": "voice-of-the-customer",
  "version": "1.0.0",
  "main": "server/server.js",
  "engines": {
    "node": "^7.8.0",
    "npm": "^5.3.0"
  },
  "scripts": {
    "browsersync": "browser-sync start --proxy 'localhost:3000' --port 3001 --files 'dist/client/**/*.*'",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "build:client": "(cd ./client && npm run build)",
    "start": "path-exists dist/client && node . || echo 'no built client detected.'",
    "serve": "(cd ./client && npm run build) && concurrently \"node .\" \"sleep 5 && opener http://localhost:3000\"",
    "watch:client": "(cd ./client && npm run develop)",
    "watch:server": "nodemon --watch ./server --watch ./common",
    "init": "npm install",
    "postinstall": "path-exists client && (cd ./client && npm install) || echo 'client dependencies are skipped in production'",
    "develop": "concurrently \"npm run watch:client\" \"npm run watch:server\" \"sleep 20 && npm run browsersync\"; exit 0",
    "test": "jasmine"
  },
  "dependencies": {
    "async": "^2.1.5",
    "babel-polyfill": "^6.20.0",
    "body-parser": "^1.15.2",
    "cf-deployment-tracker-client": "^0.1.3",
    "cfenv": "^1.0.3",
    "cheerio": "^0.22.0",
    "cloudant": "^1.7.1",
    "compression": "^1.7.0",
    "crawler": "^1.0.3",
    "debug": "^3.0.0",
    "form-data": "^2.1.2",
    "fs-sync": "^1.0.3",
    "helmet": "^3.8.1",
    "inquirer": "^3.0.6",
    "lodash": "^4.17.4",
    "loopback": "^3.10.1",
    "loopback-boot": "^2.26.1",
    "loopback-component-explorer": "4.2.0",
    "loopback-connector-cloudant": "^2.0.2",
    "loopback-connector-rest": "^3.0.0",
    "moment": "^2.18.1",
    "multer": "^1.2.0",
    "path-exists-cli": "^1.0.0",
    "request": "^2.81.0",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^2.2.0",
    "watson-developer-cloud": "^2.39.0",
    "zombie": "^5.0.5"
  },
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "concurrently": "^3.5.0",
    "eslint": "^3.17.1",
    "eslint-config-loopback": "^8.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jasmine": "^2.8.4",
    "eslint-plugin-node": "^4.2.3",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jasmine": "^2.7.0",
    "nodemon": "^1.11.0",
    "nsp": "^2.7.0",
    "opener": "^1.4.3",
    "validator": "^7.0.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "Apache-2.0",
  "description": "voice-of-the-customer-app"
}
